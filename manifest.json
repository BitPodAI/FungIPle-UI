{
  "manifest_version": 3,
  "name": "FungIPle",
  "version": "0.0.1",
  "description": "A Chrome extension built with ai16z for web3 friendly entrance",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab", "scripting",
    "storage", "sidePanel", "idle"
  ],
  "host_permissions": ["http://web3ai.cloud/*", "https://web3ai.cloud/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "public/icon16.png"
    }
  },
  "side_panel": {
    "default_path": "index.html",
    "openPanelOnActionClick": true
  },
  "web_accessible_resources": [
    {
      "resources": ["public/*", "assets/*", "src/assets/images/temp/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "panel.js"
      ],
      "run_at": "document_end",
      "type": "module"
    }
  ]
}
