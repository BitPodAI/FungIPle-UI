{
  "manifest_version": 3,
  "name": "FungIPle",
  "version": "0.0.1",
  "description": "A Chrome extension built with ai16z for web3 friendly entrance",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "action", "sidePanel", "idle", "http://localhost:5173", "http://localhost:3000"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "public/icon16.png",
      "48": "public/icon16.png",
      "128": "public/icon16.png"
    }
  },
  "side_panel": {
    "default_path": "index.html",
    "openPanelOnActionClick": true
  }
}
